<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <TextView        android:id="@+id/tvDate"        style="@style/AppTheme.TextSubTittle"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="16dp"        android:layout_marginTop="8dp"        android:text="Minggu ke 1, Laporan ke 1"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <View        android:layout_width="0dp"        android:layout_height="2dp"        android:layout_marginStart="32dp"        android:layout_marginEnd="16dp"        android:background="@android:color/black"        app:layout_constraintBottom_toBottomOf="@+id/tvDate"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@+id/tvDate"        app:layout_constraintTop_toTopOf="@+id/tvDate" />    <LinearLayout        android:id="@+id/linear_image"        android:layout_width="match_parent"        android:layout_height="170dp"        android:layout_marginStart="16dp"        android:layout_marginTop="8dp"        android:layout_marginEnd="16dp"        android:orientation="horizontal"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/tvDate">        <com.makeramen.roundedimageview.RoundedImageView            android:id="@+id/image_first"            android:layout_width="match_parent"            android:layout_height="150dp"            android:layout_margin="@dimen/dp5"            android:layout_weight="1"            android:scaleType="centerCrop"            app:riv_border_color="#333333"            app:riv_border_width="2dip"            app:riv_corner_radius="20dip" />        <com.makeramen.roundedimageview.RoundedImageView            android:id="@+id/image_second"            android:layout_width="match_parent"            android:layout_height="150dp"            android:layout_margin="@dimen/dp5"            android:layout_weight="1"            android:scaleType="centerCrop"            app:riv_border_color="#333333"            app:riv_border_width="2dip"            app:riv_corner_radius="20dip" />        <com.makeramen.roundedimageview.RoundedImageView            android:id="@+id/image_third"            android:layout_width="match_parent"            android:layout_height="150dp"            android:layout_margin="@dimen/dp5"            android:layout_weight="1"            android:scaleType="centerCrop"            app:riv_border_color="#333333"            app:riv_border_width="2dip"            app:riv_corner_radius="20dip" />    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>